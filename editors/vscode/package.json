{
	"name": "vermilion",
	"displayName": "Vermilion",
	"description": "Vermilion is a Verilog, Verilog-AMS, SystemVerilog, and VHDL linter and formatter, and language server.",
	"version": "0.0.1",
	"publisher": "shrine-maiden-heavy-industries",
	"engines":
	{
		"vscode": "^1.93.0"
	},
	"license": "(BSD-3-Clause)",
	"repository":
	{
		"type": "git",
		"url": "https://github.com/shrine-maiden-heavy-industries/Vermilion"
	},
	"bugs":
	{
		"url": "https://github.com/shrine-maiden-heavy-industries/Vermilion/issues"
	},
	"categories":
	[
		"Programming Languages",
		"Linters",
		"Snippets",
		"Formatters",
		"Other"
	],
	"keywords":
	[
		"verilog",
		"verilog-ams",
		"system-verilog",
		"vhdl"
	],
	"preview": true,
	"activationEvents":
	[
		"onLanguage:verilog",
		"onLanguage:verilog-ams",
		"onLanguage:system-verilog",
		"onLanguage:vhdl"
	],
	"main": "./build/extension.js",
	"scripts":
	{
		"vscode:prepublish": "npm run lint && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"test": "jest",
		"lint": "eslint --ext ts src",
		"installDevExtension": "npm install && ./node_modules/.bin/vsce package -o ./build/vermilion-dev.vsix && code --install-extension ./build/vermilion-dev.vsix"
	},
	"dependencies":
	{
		"ts-results": "^3.3.0",
		"tslib":"^2.8.1",
		"vscode-languageclient": "^9.0.1"
	},
	"devDependencies":
	{
		"@types/node": "^25.0.3",
		"@types/vscode": "^1.93.0",
		"@typescript-eslint/eslint-plugin": "^8.50.0",
		"@typescript-eslint/parser": "^8.50.0",
		"@stylistic/eslint-plugin": "^5.6.1",
		"eslint": "^9.39.2",
		"jest": "^30.2.0",
		"ts-jest": "^29.4.6",
		"typescript": "~5.9.3",
		"@vscode/vsce": "^3.7.1"
	},
	"contributes":
	{
		"languages":
		[
			{
				"id": "verilog",
				"extensions":
				[
					".v",
					".vh",
					".vm"
				],
				"configuration": "./language-configuration.json",
				"icon":
				{
					"dark": "verilog_icon.svg",
					"light": "verilog_icon.svg"
				}
			},
			{
				"id": "verilog-ams",
				"extensions":
				[
					".vams"
				],
				"configuration": "./language-configuration.json",
				"icon":
				{
					"dark": "verilog_ams_icon.svg",
					"light": "verilog_ams_icon.svg"
				}
			},
			{
				"id": "system-verilog",
				"extensions":
				[
					".sv"
				],
				"configuration": "./language-configuration.json",
				"icon":
				{
					"dark": "system_verilog_icon.svg",
					"light": "system_verilog_icon.svg"
				}
			},
			{
				"id": "vhdl",
				"extensions":
				[
					".vhdl",
					".vdh"
				],
				"configuration": "./language-configuration.json",
				"icon":
				{
					"dark": "vhdl_icon.svg",
					"light": "vhdl_icon.svg"
				}
			}
		]
	}
}
