{
	"name": "vermilion",
	"displayName": "Vermilion",
	"description": "Vermilion is a Verilog, Verilog-AMS, SystemVerilog, and VHDL linter and formatter, and language server.",
	"version": "0.0.1",
	"publisher": "shrine-maiden-heavy-industries",
	"engines":
	{
		"vscode": "^1.93.0"
	},
	"license": "(BSD-3-Clause)",
	"repository":
	{
		"type": "git",
		"url": "https://github.com/shrine-maiden-heavy-industries/Vermilion"
	},
	"bugs":
	{
		"url": "https://github.com/shrine-maiden-heavy-industries/Vermilion/issues"
	},
	"categories":
	[
		"Programming Languages",
		"Linters",
		"Snippets",
		"Formatters",
		"Other"
	],
	"keywords":
	[
		"verilog",
		"verilog-ams",
		"system-verilog",
		"vhdl"
	],
	"preview": true,
	"activationEvents":
	[
		"workspaceContains:vermilion.toml",
		"workspaceContains:*/vermilion.toml"
	],
	"main": "./build/extension.js",
	"scripts":
	{
		"vscode:prepublish": "npm run lint && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"test": "jest",
		"lint": "eslint --ext ts src",
		"installDevExtension": "npm install && ./node_modules/.bin/vsce package -o ./build/vermilion-dev.vsix && code --install-extension ./build/vermilion-dev.vsix"
	},
	"dependencies":
	{
		"ts-results": "^3.3.0",
		"tslib":"^2.8.1",
		"vscode-languageclient": "^9.0.1"
	},
	"devDependencies":
	{
		"@types/node": "^25.0.3",
		"@types/vscode": "^1.93.0",
		"@typescript-eslint/eslint-plugin": "^8.50.0",
		"@typescript-eslint/parser": "^8.50.0",
		"@stylistic/eslint-plugin": "^5.6.1",
		"eslint": "^9.39.2",
		"jest": "^30.2.0",
		"ts-jest": "^29.4.6",
		"typescript": "~5.5.4",
		"@vscode/vsce": "^3.7.1"
	},
	"contributes":
	{
		"languages":
		[
			{
				"id": "verilog",
				"extensions":
				[
					".v",
					".vh",
					".vm"
				],
				"configuration": "./languages/verilog/configuration.json",
				"icon":
				{
					"dark": "./languages/verilog/icon_dark.svg",
					"light": "./languages/verilog/icon_light.svg"
				}
			},
			{
				"id": "verilog-ams",
				"extensions":
				[
					".vams"
				],
				"configuration": "./languages/verilog_ams/configuration.json",
				"icon":
				{
					"dark": "./languages/verilog_ams/icon_dark.svg",
					"light": "./languages/verilog_ams/icon_light.svg"
				}
			},
			{
				"id": "system-verilog",
				"extensions":
				[
					".sv"
				],
				"configuration": "./languages/system_verilog/configuration.json",
				"icon":
				{
					"dark": "./languages/system_verilog/icon_dark.svg",
					"light": "./languages/system_verilog/icon_light.svg"
				}
			},
			{
				"id": "vhdl",
				"extensions":
				[
					".vhdl",
					".vhd"
				],
				"configuration": "./languages/vhdl/configuration.json",
				"icon":
				{
					"dark": "./languages/vhdl/icon_dark.svg",
					"light": "./languages/vhdl/icon_light.svg"
				}
			}
		],
		"grammars": [
			{
				"language": "verilog",
				"scopeName": "source.verilog",
				"path": "./languages/verilog/base.tmLanguage.json"
			},
			{
				"language": "verilog-ams",
				"scopeName": "source.verilog_ams",
				"path": "./languages/verilog_ams/base.tmLanguage.json"
			},
			{
				"language": "system-verilog",
				"scopeName": "source.system_verilog",
				"path": "./languages/system_verilog/base.tmLanguage.json"
			},
			{
				"language": "vhdl",
				"scopeName": "source.vhdl",
				"path": "./languages/vhdl/base.tmLanguage.json"
			}
		],
		"configuration":
		[
			{
				"title": "Vermilion",
				"properties":
				{
					"vermilion.binaryPath":
					{
						"markdownDescription": "Path to the `vermilion` executable.",
						"default": null,
						"type":"string"
					}
				}
			}
		]
	}
}
